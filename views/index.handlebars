<h1 id="header">Baseball News!</h1>
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card grey lighten-2 center-align">
            <div class="card-content">
                <a class="waves-effect waves-light btn" id="scrape">Get New Articles</a>
                <a class="waves-effect waves-light btn" id="saved" href="/articles/getsavedarticles">Saved Articles</a>
            </div>
        </div>
    </div>
</div>
<!-- Pass in data from server.js -->
<div id="article-container">
    <div class="row">
        <div class="col s6 offset-s3">
            {{#each articles}}
            <div class="card grey lighten-2 center-align" id="article-card">
                <div class="card-content" id="card-text">
                    <p><span class="label ">Title:</span> {{this.headline}}</p>
                </div>
                <div class="card-action">
                    <a href="{{this.url}}" id="link" target="_blank">Go To Article</a>
                    <a class="save-button" id="save-button" data-id="{{this._id}}">Save Article</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>